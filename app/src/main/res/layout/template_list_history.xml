<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_line"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/def_padding"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat = "@drawable/ic_history"
        android:layout_marginRight="@dimen/def_padding"
        android:layout_marginEnd="@dimen/def_padding" />

    <TextView
        android:id="@+id/txtHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgHistory"
        android:layout_toEndOf="@+id/imgHistory"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        />

</RelativeLayout>